

    <div id="mainleft" class="prepend-2 span-4">
      <% @count = @artists.count %>
      <% for num in 0..@count/3 -%>
        <h3><%= artist_link(@artists[num]) %></h3>
      <% end %>
    </div>
    <div id="mainmiddle" class="span-6">
      <% for num in (@count/3)+1..@count*2/3 -%>
        <h3><%= artist_link(@artists[num]) %></h3>
      <% end %>
    </div>
    <div id="mainright" class="span-6 last">
      <% for num in (@count*2/3)+1..@count-1 -%>
        <h3><%= artist_link(@artists[num]) %></h3>
      <% end %>
    </div><br/><br/>



